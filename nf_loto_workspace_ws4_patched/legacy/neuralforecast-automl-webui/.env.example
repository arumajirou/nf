# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_DATABASE=postgres
DB_USER=postgres
DB_PASSWORD=z

# Database Pool
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Database Options
DB_ECHO=false
DB_CONNECT_TIMEOUT=10

# MLflow
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT_NAME=neuralforecast_automl

# Application
APP_PORT=8501
APP_ENV=development

# Security (Optional)
# SECRET_KEY=your-secret-key-here
# ENABLE_AUTH=false

# Resource Monitoring
MONITOR_INTERVAL=5
ENABLE_GPU_MONITOR=true

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_DIR=./data/logs
